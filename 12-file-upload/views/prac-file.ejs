<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- axios cdn -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <style>
        form {
            background-color: aliceblue;
            padding: 10px;
            height: fit-content;
            width: fit-content;
            border-radius: 20px;
        }

        body {
            background-color: gray;
        }

        .result {
            background-color: white;
            border-radius: 30px;
            width: 400px;
            height: 500px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 5px;
        }

        div {
            display: none;
        }

        img {
            width: 200px;
            height: 200px;
        }
    </style>
</head>

<body>
    <!-- 일반 파일 업로드 (동적 X) -->
    <!-- <form action="/register" method="post" enctype="multipart/form-data">
        <input type="text" id="id" name="id"><br>
        <input type="password" id="pw" name="pw"><br>
        <input type="text" id="name" name="name"><br>
        <input type="number" id="age" name="age"><br>
        <input type="file" name="uploadfile" id="uploadfile"><br>
        <br><br>
        <button type="submit">회원가입</button>
    </form> -->
    <form>
        <input type="text" id="id" name="id" placeholder="id" class="info"><br>
        <input type="password" id="pw" name="pw" placeholder="pw" class="info"><br>
        <input type="text" id="name" name="name" placeholder="name" class="info"><br>
        <input type="number" id="age" name="age" placeholder="age" class="info"><br>
        <input type="file" name="dynamicfile" id="dynamicfile"><br>
        <br>
        <button type="button" onclick="dynamicUpload()">회원가입</button>
    </form>
    <div class="resultBox">
        <img src="" alt="">
        <h2 id="senid">
        </h2>
        <p id="sendpw">
        </p>
        <p id="sendname">
        </p>
        <p id="sendage">
        </p>
    </div>
    <script>
        function dynamicUpload() {
            const formData = new FormData();
            const file = document.querySelector('#dynamicfile');
            const id = document.querySelector('#id');
            const pw = document.querySelector('#pw');
            const name = document.querySelector('#name');
            const age = document.querySelector('#age');
            // console.log(info.value);  // 'id' 값이 올바르게 출력되는지 확인
            formData.append('dynamicfile', file.files[0]);
            formData.append('id', id.value);
            formData.append('pw', pw.value);
            formData.append('name', name.value);
            formData.append('age', age.value);

            axios({
                method: 'post',
                url: '/dynamic',
                data: formData,
                headers: {
                    'Content-Type': 'multipart/form-data', // 이 부분을 명시적으로 설정
                },
            }).then((res) => {
                const { file, data } = res.data;
                const img = document.querySelector('img');
                const h2 = document.querySelector('h2');
                const sendpw = document.querySelector('#sendpw');
                const sendname = document.querySelector('#sendname');
                const sendage = document.querySelector('#sendage');
                const resultBox = document.querySelector('.resultBox');
                resultBox.classList.add('result');
                img.src = '/' + file.path;

                h2.textContent = `${data.id}님 환영합니다!`;
                sendpw.textContent = `비밀번호 : ${data.pw}`;
                sendname.textContent = `이름 : ${data.name}`;
                sendage.textContent = `나이 : ${data.age}`;

            }).catch((error) => {
                console.log(error);
            });
        }
    </script>
</body>

</html>